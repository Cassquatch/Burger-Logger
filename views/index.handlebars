<header>
    <img id="header-img" src="assets\images\BB_background.jpg">
</header>

<div class="headline">
    <h4 class="eat-da-burger">Eat Da Burger!</h4>
</div>
   
        
            
                <ul class="burgers-to-eat">

                    {{#each burgers}}
                        {{#unless devoured}}
                            <li>Burger Name: {{burger_name}}</li>
                            <button class="devour" data-id={{id}}>Eat me!</button>
                        {{/unless}}
                    {{/each}}
                </ul>

                
                <ul class="devoured-burgers">

                    {{#each burgers}}
                        {{#if devoured}}
                            <li>Burger Name: {{burger_name}}</li>
                            <button class="delete-burger" data-id={{id}}>Delete</button>
                        {{/if}}
                    {{/each}}
                </ul>
    
        
                <form class="create-form">
                    <div class="form-group">
                        <label for="burger"></label>
                        <textarea type="text" id="burger" name="burger_name">
                        </textarea>
                    </div>
              
                </form>
                    <button class="add-burger" type="click">Add a Burger!</button>
                    <h2 class="words">Add a burger!</h2>
        
